# Configurações da Aplicação
APP_NAME="Sistema de Prestação de Contas"
APP_URL=http://localhost
APP_ENV=development

# Configurações do Banco de Dados
DB_HOST=localhost
DB_NAME=prestacao_contas
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Configurações de Segurança
SESSION_LIFETIME=7200
CSRF_TOKEN_LENGTH=32
SESSION_NAME=prestacao_session

# Configurações do Admin Padrão
ADMIN_EMAIL=admin@example.com
ADMIN_PASS_DEFAULT=Change_This_Password_123

# Timezone
TIMEZONE=America/Sao_Paulo

# Configurações PIX (para receber contribuições)
PIX_CHAVE=sua_chave_pix_aqui
PIX_NOME=Nome do Beneficiario
PIX_CIDADE=Sua Cidade
PIX_HOLDER_NAME=Nome Completo do Titular
PIX_CPF_DISPLAY=000.000.000-00
PIX_BANK_NAME=Nome do Banco

# Identidade da Aplicação
PATIENT_NAME=Nome da Pessoa Cuidada
PATIENT_TITLE=Mãe/Vó/Bisavó/Paciente
ORGANIZATION_NAME=Nome da Família
APP_TAGLINE=Transparência e amor em cada gesto
